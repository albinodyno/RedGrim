<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedGrim.Mobile.Controls.MapControl"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">
    
  <ContentView.Content>
        <Grid x:Name="MapGrid" BackgroundColor="Black">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height=".15*"/>
            </Grid.RowDefinitions>

            <StackLayout x:Name="mapLayout" Grid.Row="0"/>

            <StackLayout x:Name="mapMenu" Grid.Row="1" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Button x:Name="btnPanToCurrentLocation" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Text="Loc" FontSize="16" Background="transparent" TextColor="DarkCyan" Clicked="btnPanToCurrentLocation_Clicked"/>
                <Button HorizontalOptions="CenterAndExpand"/>
                <Button HorizontalOptions="CenterAndExpand"/>
                <Button HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </Grid>
  </ContentView.Content>
</ContentView>