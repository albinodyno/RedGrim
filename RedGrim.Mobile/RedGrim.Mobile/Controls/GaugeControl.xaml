<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedGrim.Mobile.Controls.GaugeControl">
  <ContentView.Content>
        <Frame x:Name="gagBox1Frame" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" BorderColor="Cyan" CornerRadius="5" BackgroundColor="Transparent">
            <StackLayout VerticalOptions="FillAndExpand">
                <Label x:Name="gagBox1Label" Text="---" HorizontalOptions="CenterAndExpand" TextColor="Cyan" FontSize="Title"/>

                <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                    <Label x:Name="gagBox1Value" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" Text="---" TextColor="Cyan" FontSize="36"/>
                    <Label x:Name="gagBox1UoM" VerticalOptions="Fill" HorizontalOptions="StartAndExpand" Text="" TextColor="Cyan" FontSize="34"/>
                    <Label x:Name="gagBox1TestVM" VerticalOptions="Fill" HorizontalOptions="StartAndExpand" Text="{Binding GaugeValue}" TextColor="Cyan" FontSize="34"/>
                </StackLayout>

            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>